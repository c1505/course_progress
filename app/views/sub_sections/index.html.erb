<p id="notice"><%= notice %></p>

<h1>Listing Sub Sections</h1>

<table>
  <thead>
    <tr>
      <th>Time estimate</th>
      <th>Time completed</th>
      <th>Complete</th>
      <th>Title</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_sections.each do |sub_section| %>
      <tr>
        <td><%= sub_section.time_estimate %></td>
        <td><%= sub_section.time_completed %></td>
        <td><%= sub_section.complete %></td>
        <td><%= sub_section.title %></td>
        <td><%= sub_section.section_id %></td>
        <td><%= link_to 'Show', sub_section %></td>
        <td><%= link_to 'Edit', edit_sub_section_path(sub_section) %></td>
        <td><%= link_to 'Destroy', sub_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

